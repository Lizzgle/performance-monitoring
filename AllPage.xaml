<Page x:Class="performance_monitoring.AllPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:performance_monitoring"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllPage">

    <Grid>
         <!--График использования CPU-->

        <lvc:CartesianChart x:Name="UsageChart" Grid.Row="0"
                      Margin="10" LegendLocation="Right">
        <lvc:CartesianChart.AxisY>
            <lvc:Axis Title="Usage (%)"/>
        </lvc:CartesianChart.AxisY>
        <lvc:CartesianChart.AxisX>
            <lvc:Axis Title="Time (s)"/>
        </lvc:CartesianChart.AxisX>
        </lvc:CartesianChart>
    </Grid>
</Page>
